# FoundryVTT Local Relay Server Development Environment

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Security Configuration (Development Keys)
API_KEY_DEV=dev-test-key-12345
API_KEY_TEST=test-world-id-12345

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=15000
WS_REQUEST_TIMEOUT=5000
WS_CLEANUP_INTERVAL=15000

# Foundry Configuration
FOUNDRY_HOST=localhost
FOUNDRY_PORT=30000

# Database/Storage Configuration
DATA_DIR=/app/server/data
LOGS_DIR=/app/logs

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:30000
CORS_CREDENTIALS=true

# Development Configuration
DEBUG_MODE=true
VERBOSE_LOGGING=true
HOT_RELOAD=true

# Testing Configuration
TEST_MODE=false
MOCK_FOUNDRY=false