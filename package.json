{
  "name": "foundry-rest-api",
  "version": "1.8.8",
  "description": "A REST API for Foundry VTT",
  "author": "ThreeHats",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "dev": "tsc && vite build --watch",
    "server:build": "cd server && tsc",
    "server:dev": "cd server && tsc --watch & nodemon server/dist/server.js",
    "server:start": "cd server && tsc && node dist/server.js",
    "server:clean": "rm -rf server/dist",
    "test": "npm run server:build && jest",
    "test:watch": "npm run server:build && jest --watch",
    "test:coverage": "npm run server:build && jest --coverage",
    "test:unit": "npm run server:build && jest --testPathPattern=unit",
    "test:integration": "npm run server:build && jest --testPathPattern=integration",
    "test:smoke": "./scripts/test-smoke.sh",
    "test:performance": "./scripts/test-performance.sh",
    "test:all": "./scripts/test-all.sh",
    "test:integration-full": "./scripts/test-integration.sh"
  },
  "devDependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "^9.280.0",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.0.0-beta.3",
    "nodemon": "^3.1.10",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-scss": "^3.0.0",
    "sass": "^1.54.8",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "dependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/ws": "^8.18.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "ws": "^8.18.2"
  }
}
